extends index

block new_msg
  h3= title

  form(method='POST' action='')
    div.form-group
      label(for='message') Message:
      input#message.form-control(type='text' placeholder='Message...' name='message' required='true' value='')
    button.btn.btn-primary(type='submit') Post Message
  if errors
    ul
      for error in errors
        li!= error.msg