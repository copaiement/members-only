extends layout

block content
  div.content
    h1= title

    form(method='POST' action='')
      div.form-group
        label(for='username') Username:
        input#username.form-control(type='text' placeholder='Username' name='username' required='true' value=(undefined===username ? '' : username))
      div.form-group
        label(for='password') Password:
        input#password.form-control(type='password' placeholder='Password' name='password' required='true' value='')
      div.form-buttons
        button.button.btn-primary(type='submit') Submit
        a.button.cancel-button(href='/') Cancel
    if errors
      ul
        for error in errors
          li!= error.msg
