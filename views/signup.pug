extends index

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='text' placeholder='Email' name='email' required='true' value=(undefined===email ? '' : email))
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text' placeholder='Username' name='username' required='true' value=(undefined===username ? '' : username))
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password' placeholder='Password' name='password' required='true' value='')
    div.form-group
      label(for='confirm-password') Confirm Password:
      input#confirm-password.form-control(type='password' placeholder='Password' name='confirm-password' required='true' value='')
    button.btn.btn-primary(type='submit') Submit
    a.cancelBtn(href='/') Cancel
  if errors
    ul
      for error in errors
        li!= error.msg
